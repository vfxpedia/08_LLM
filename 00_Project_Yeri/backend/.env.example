# ======================
# Application Settings
# ======================
APP_NAME="Yeri Game Backend"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT="development"  # development, staging, production

# ======================
# Server Settings
# ======================
HOST="0.0.0.0"
PORT=8000

# ======================
# CORS Settings
# ======================
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# ======================
# Ollama EEVE LLM Settings
# ======================
EEVE_ENDPOINT="http://localhost:11434"
EEVE_MODEL_NAME="eeve"
EEVE_TIMEOUT=30

# ======================
# TTS Settings (VibeVoice / Nari Labs)
# ======================
# Option 1: VibeVoice
VIBEVOICE_API_KEY="your-vibevoice-api-key-here"
VIBEVOICE_ENDPOINT="https://api.vibevoice.ai/v1"

# Option 2: Nari Labs Dia-1.6
NARI_API_KEY="your-nari-api-key-here"
NARI_ENDPOINT="https://api.narilabs.ai/v1"

# Default TTS Provider: vibevoice or nari
DEFAULT_TTS_PROVIDER="vibevoice"

# ======================
# STT Settings (Whisper / Google Speech)
# ======================
# Option 1: OpenAI Whisper
OPENAI_API_KEY="sk-your-openai-api-key-here"
WHISPER_MODEL="whisper-1"

# Option 2: Google Speech
GOOGLE_CLOUD_API_KEY="your-google-cloud-api-key-here"

# Default STT Provider: whisper or google
DEFAULT_STT_PROVIDER="whisper"

# ======================
# VectorDB Settings (Chroma / Pinecone)
# ======================
# Option 1: Chroma (Local)
CHROMA_HOST="localhost"
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME="yeri_emotions"

# Option 2: Pinecone (Cloud)
# PINECONE_API_KEY="your-pinecone-api-key-here"
# PINECONE_ENVIRONMENT="us-west1-gcp"
# PINECONE_INDEX_NAME="yeri-emotions"

# Default VectorDB Provider: chroma or pinecone
DEFAULT_VECTOR_PROVIDER="chroma"

# ======================
# Image Settings
# ======================
# ComfyUI (Runpod)
COMFYUI_ENDPOINT="http://localhost:8188"
COMFYUI_API_KEY="your-comfyui-api-key-here"

# Image Storage Path
IMAGE_STORAGE_PATH="./assets/yeri"
IMAGE_CDN_URL="http://localhost:8000/static"

# ======================
# Cache Settings
# ======================
TTS_CACHE_DIR="./tmp/tts"
TTS_CACHE_TTL=86400  # 24 hours in seconds

# ======================
# Session Settings
# ======================
SESSION_TIMEOUT=600  # 10 minutes in seconds
MAX_SESSIONS_PER_USER=5

# ======================
# Scoring Settings (from 02_Score_System_Detail.md)
# ======================
EMOTION_SENSE_WEIGHT=0.6
OBSERVATION_WEIGHT=0.25
REFLEX_WEIGHT=0.15

# Emotion Multiplier Range
EMOTION_MULTIPLIER_MIN=0.8
EMOTION_MULTIPLIER_MAX=1.2

# Combo Bonus
COMBO_1_BONUS=2
COMBO_2_BONUS=4
COMBO_3_BONUS=6

# ======================
# Logging Settings
# ======================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH="./logs/app.log"
LOG_ROTATION="500 MB"
LOG_RETENTION="10 days"

# ======================
# Security (Optional)
# ======================
SECRET_KEY="your-secret-key-for-jwt-here-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
